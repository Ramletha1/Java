int num = 20;
++num = 20 then 21
num++ = 21

int num = 50;
int age = 20;
String name = "William";
String str1 = String.format("Name is %s, my number is %d and my age is %d.", name,num,age);
System.out.println(str1);

boolean truth = true;
String str1 = String.format("It is %b.", truth);    // Boolean use %b
System.out.println(truth);